
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        <center>
            <style>
                body {
                    background-color: cadetblue;
                }

                h1 {
                    text-align: center;
                    color: yellow;
                    padding: 50px;
                    font-size: 30pt;
                    font-family: Mclawsuit;
                    margin: auto;
                }

                p {
                    color: red;
                }

                .carousel {
                    width: 850px;
                    height: 550px;
                    align-content: center;
                    margin: auto;
                }

                    .carousel.carousel-item {
                        transition: transform 0.2s ease-in-out;
                    }

                .button {
                    width: 10%;
                    border: none;
                    color: orangered;
                    padding: 15px 32px;
                    text-align: center;
                    text-decoration: none;
                    display: inline-block;
                    font-size: 16px;
                    text-decoration: none;
                    color: white;
                }

            </style>
        </center>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body style="text-align:center;margin:auto">
    <div style="background-color:red">
        <h1> Welcome to McDonald's</h1>
    </div>
    <div>
        <marquee style="color:white; background-color: slategrey" behavior="alternate">Check out our eating challenge! one hundred burgers in 30 minutes!!! Winner gets lifetime discount of 90%</marquee>
    </div>
    <div class="button">
        @Html.ActionLink("Login", "Login")
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/b1.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/b2.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/b3.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/b4.jpg">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/b5.png">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/b6.jpg">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>
</html>
